# GTPlanner Configuration
#
# 🌟 必需的环境变量 (Required)
# ================================

# LLM服务配置 (LLM Service Configuration)
LLM_BASE_URL=your_llm_base_url_here          # 必需: LLM服务地址
LLM_API_KEY=your_api_key_here                # 必需: LLM API密钥
LLM_MODEL=gpt-4                              # 可选: LLM模型名称 (默认: gpt-4)

# 向量服务配置 (Vector Service Configuration)
VECTOR_SERVICE_BASE_URL=your_vector_service_base_url_here  # 必需: 向量服务地址

# 🔧 可选的环境变量 (Optional)
# ================================

# Jina搜索服务 (Jina Search Service) - 可选，用于网络搜索功能
JINA_API_KEY=your_jina_api_key_here          # 可选: 不设置则禁用搜索功能

# 向量服务高级配置 (Vector Service Advanced Configuration)
VECTOR_SERVICE_TIMEOUT=30                    # 可选: 请求超时时间 (默认: 30秒)
VECTOR_SERVICE_INDEX_NAME=document_gtplanner_tools_yourname  # 可选: 工具索引名称
VECTOR_SERVICE_VECTOR_FIELD=combined_text   # 可选: 向量字段名称

# 文档嵌入配置 (Document Embedding Configuration) - 可选
EMBEDDING_MODEL=text-embedding-3-small       # 可选: 嵌入模型 (默认: text-embedding-3-small)
EMBEDDING_CHUNK_SIZE=1000                    # 可选: 文档块大小 (默认: 1000)
EMBEDDING_MIN_CHUNK_SIZE=100                 # 可选: 最小块大小 (默认: 100)
EMBEDDING_CHUNK_OVERLAP=200                  # 可选: 块重叠大小 (默认: 200)
EMBEDDING_BATCH_SIZE=100                     # 可选: 批处理大小 (默认: 100)
EMBEDDING_MAX_RETRIES=3                      # 可选: 最大重试次数 (默认: 3)
EMBEDDING_RETRY_DELAY=1.0                    # 可选: 重试延迟秒数 (默认: 1.0)

# 系统配置 (System Configuration) - 可选
GTPLANNER_DEBUG=false                        # 可选: 调试模式 (默认: false)
GTPLANNER_LOG_LEVEL=INFO                     # 可选: 日志级别 (默认: INFO)
GTPLANNER_DEFAULT_LANGUAGE=en                # 可选: 默认语言 (默认: en)
GTPLANNER_ENABLE_DEEP_DESIGN_DOCS=false     # 可选: 深度设计文档功能 (默认: false)

# 日志配置 (Logging Configuration) - 可选
GTPLANNER_LOG_FILE_ENABLED=true             # 可选: 启用文件日志 (默认: true)
GTPLANNER_LOG_CONSOLE_ENABLED=true          # 可选: 启用控制台日志 (默认: true)
GTPLANNER_LOG_MAX_FILE_SIZE=10485760         # 可选: 最大日志文件大小 (默认: 10MB)
GTPLANNER_LOG_BACKUP_COUNT=5                # 可选: 日志备份数量 (默认: 5)

# OpenAI客户端调试配置 (OpenAI Client Debug Configuration) - 可选
OPENAI_DEBUG_ENABLED=false                   # 可选: OpenAI调试模式 (默认: false)
OPENAI_LOG_REQUESTS=false                    # 可选: 记录请求日志 (默认: false)
OPENAI_LOG_RESPONSES=false                   # 可选: 记录响应日志 (默认: false)
OPENAI_LOG_LEVEL=INFO                        # 可选: OpenAI日志级别 (默认: INFO)
OPENAI_LOG_TO_FILE=true                      # 可选: OpenAI日志写入文件 (默认: true)
OPENAI_LOG_TO_CONSOLE=false                  # 可选: OpenAI日志输出到控制台 (默认: false)

# Jina服务高级配置 (Jina Service Advanced Configuration) - 可选
JINA_SEARCH_BASE_URL=https://s.jina.ai/      # 可选: Jina搜索服务地址
JINA_WEB_BASE_URL=https://r.jina.ai/         # 可选: Jina网页服务地址

# 🔬 高级配置 (Advanced Configuration)
# ====================================

# Langfuse追踪配置 (Langfuse Tracing Configuration) - 可选
LANGFUSE_SECRET_KEY=your-secret-key-here
LANGFUSE_PUBLIC_KEY=your-public-key-here
LANGFUSE_HOST=https://your-langfuse-host.com

# PocketFlow追踪配置 (PocketFlow Tracing Configuration) - 可选
POCKETFLOW_TRACING_DEBUG=false
POCKETFLOW_TRACE_INPUTS=true
POCKETFLOW_TRACE_OUTPUTS=true
POCKETFLOW_TRACE_PREP=true
POCKETFLOW_TRACE_EXEC=true
POCKETFLOW_TRACE_POST=true
POCKETFLOW_TRACE_ERRORS=true

# 会话配置 (Session Configuration) - 可选
POCKETFLOW_SESSION_ID=gtplanner-session
POCKETFLOW_USER_ID=gtplanner-user
